# AI Job Application Agent - Configuration
# Environment Variables Setup

# =================
# API KEYS NEEDED
# =================

# 1. AIML API Key (Required for LLM)
# Get from: https://aimlapi.com
# AIML_API_KEY=your_aiml_api_key_here

# 2. OpenAI API Key (Alternative LLM option)
# OPENAI_API_KEY=your_openai_api_key_here

# 3. Job Board API Keys (Optional - for real job search)
# LINKEDIN_API_KEY=your_linkedin_api_key
# INDEED_API_KEY=your_indeed_api_key
# REMOTEOK_API_KEY=your_remoteok_api_key

# =================
# CORAL PROTOCOL SETTINGS
# =================

# Coral Server Connection
CORAL_CONNECTION_URL=http://localhost:5555/devmode/hackathonApp/privkey/session1/sse
CORAL_SERVER_URL=http://localhost:5555

# Agent Configuration
CORAL_APPLICATION_ID=hackathonApp
CORAL_PRIVACY_KEY=privkey
CORAL_SESSION_ID=session1

# =================
# MODEL CONFIGURATION
# =================

# LLM Settings
PLATFORM_TYPE=OPENAI
MODEL_TYPE=GPT_4O_MINI
MODEL_BASE_URL=https://api.aimlapi.com/v1
MODEL_NAME=openai/gpt-4o-mini

# Model Parameters
MODEL_TEMPERATURE=0.3
MODEL_MAX_TOKENS=4096
MODEL_TIMEOUT=30

# =================
# AGENT SETTINGS  
# =================

# Performance Settings
MESSAGE_WINDOW_SIZE=4096
TOKEN_LIMIT=20000
AGENT_TIMEOUT=30000

# Database Settings
AUDIT_DB_PATH=audit_log.db

# Debug Settings
DEBUG_MODE=True
LOG_LEVEL=INFO